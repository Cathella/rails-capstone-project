      <div class="row">
        <div class="col-12 mb-5 d-flex justify-content-center">
          <a href="users/edit">
          <span class="h4 text-white">You are welcome, <%= current_user.username %>!</span>
          </a>
        </div>

        <div class="col-2 d-flex justify-content-center align-items-center mt-3 mb-3">
