<div class="container-fluid">
  <div class="inside-width greyed-bg pb-5">
    <p id="notice"><%= notice %></p>
    <h4 class="text-center nav-head">
      <span>
        <a href="/profile">
          <i class="fas fa-arrow-left h3 text-white"></i>
        </a>
      </span>
      Group details
    </h4>

    <div class="card mb-3">
      <div class="card-body d-flex justify-content-between rounded-0">
        <span class="h5 text-muted m-0">Total Spent</span>
        <span class="h5 text-dark font-weight-bolder m-0"> $<%= @group_transaction_sum %></span>
      </div>
    </div>

    <% @group_transactions.each do |transaction| %>
      <div class="card mb-3 mx-5">
        <div class="row no-gutters">
          <div class="col-2 d-flex text-center">
            <i class="p-1 fas <%= transaction.icon %> fa-2x card-img align-self-center blue-colored" ></i>
          </div>

          <div class="col-7 ">
            <div class="card-body mx-0 px-3 py-2">
              <div class= " w-100 align-items-center">
                <span class="card-title h6 text-capitalize text-muted m-0"> <%= transaction.name %></span>
              </div>
              <div class="d-flex mt-1">
                <p class="card-text text-muted mb-0 h6">
                  <small><%= transaction.created_at.strftime('%d-%m-%Y') %></small>
                </p>
              </div>
            </div>
          </div>

          <div class="col-3 pt-1">
            <span class="card-text h5 mt-3 "> $<%= transaction.amount %></span><br>
            <span class="card-text h6 text-capitalize text-muted font-italic my-0">
              <small>by <%= transaction.user.username %></small>
            </span>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mx-5 my-2">
      <a class="btn btn-block logout-btn" href="/groups/<%="#{params[:id]}"%>/edit" role="button">Edit group</a>
    </div>

  </div>
</div>
